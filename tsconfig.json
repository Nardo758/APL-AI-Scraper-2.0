{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest"]
  },
  "include": ["services/**/*.js", "middleware/**/*.js", "routes/**/*.js", "utils/**/*.js", "server.js", "types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "logs",
    "frontend",
    "browser-extension",
    "tests",
    "__tests__",
    "migrations",
    ".github",
    ".vscode",
    "templates",
    "scripts"
  ]
}
